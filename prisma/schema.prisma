// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id     Int @default(autoincrement()) @id
  name   String
  users  User[]
}

model User {
  id          Int @default(autoincrement()) @id
  fullName    String
  email       String @unique
  password    String
  companyId   Int?
  company     Company? @relation(fields: [companyId], references: [id])
  events Event[]
  @@map("users")
}

model Event {
  id          Int @default(autoincrement()) @id
  title       String
  location    String
  startDate   DateTime
  endDate     DateTime
  userId      Int
  user        User @relation(fields: [userId], references: [id])
  attendees Attendee[] 
  @@map("events")
}

model Attendee {
  id          Int @default(autoincrement()) @id
  name        String
  email       String
  eventId     Int
  event       Event @relation(fields: [eventId], references: [id])
  @@map("attendees")
}