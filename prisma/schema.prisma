// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  companyId        Int   @default(autoincrement()) @id
  name     String
  users User[]
}

model User {
  userId        Int       @default(autoincrement()) @id
  companyId     Int? 
  company   Company? @relation(fields: [companyId], references: [companyId])
  email         String?   @unique
  name          String
  password      String
  @@map(name: "users")
}

model Event {
  eventId        Int       @default(autoincrement()) @id
  date     DateTime
  name         String
  user          String
  attendee      String
}

model Attendee {
  attendeeId        Int       @default(autoincrement()) @id
  email         String 
  name          String
}